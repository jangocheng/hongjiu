	<script>
		var menu_left = document.getElementById('left_ul');
		var span = menu_left.getElementsByTagName('span');
		
		var main = document.getElementsByClassName('main_xx');
		for(var i = 0; i<span.length;i++){
			span[i].index = i;
			span[i].onclick = function(){
				
				for(var j = 0; j<main.length; j++){
					span[j].className = "";
					main[j].style.display = 'none';
				}
				span[this.index].className = 'active';
				main[this.index].style.display = 'block';
			}
		}
