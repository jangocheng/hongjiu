	//立即购买
	mui('body').on('tap','#buy',function(){
				
				//	余额
				var acount = document.getElementById('acount').innerText;
				//数量
				var num = document.getElementById('commoditySelectNum').value;
				//商品价格
				var price = document.getElementById('sell_price').innerText;
				
				//运费
				//var yunfei = document.getElementById('yf_money').innerText;
				//console.log(yunfei);
				var xiaofei = parseInt(num * price);
				//var zonge = parseInt(xiaofei+yunfei);
				//console.log(zonge);
//				console.log(xiaofei);
				if(acount < xiaofei){
					mui.toast('账户余额不足，请充值');  //判断账户余额是否充足
						setTimeout(function(){
							window.location.href = 'chongzhi.aspx';
						},2000)
				}else{
					mui.ajax('/tools/submit_ajax.ashx?action=order_save2',{
						type:'post',
						datatype:'string',
						data:{
							id:getQueryString('id'),
							quantity:num
						},
						success:function(data){
							
							data = JSON.parse(data);
							console.log(data.status);
							if(data.status == 1){
								/*alert(9999)*/
								
							
								var prostatus = '{model.is_upgrade}';  //判断是否是升级商品
								//alert(prostatus);
								if(prostatus =='1'){
									
									$('#games,#mask').css('display','block');
									$('#goto_hb').attr('href','chaihb.aspx?order_no='+data.order_no);
									$('#goto_jo').attr('href','caijiou.aspx?order_no='+data.order_no);
									$('#goto_th').attr('href','choose_add.aspx?order_no='+data.order_no);
									
								}else if(prostatus =='0'){
									
									//普通商品购买
									mui.toast('恭喜，订单提交成功');
									setTimeout(function(){
										window.location.href = 'my_orderlist.aspx?order_no='+data.order_no;
									},3000)
									
								}
							}else{
								mui.toast(data.msg);
							}
						},
						error:function(){
							mui.toast('失败');
						}
					})
				}
		
		
	
	});
		
	
	
